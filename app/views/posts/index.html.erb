<h1>Информация о действиях Валеры</h1>
<%= link_to 'На главную', controller: 'welcome' %><br>
<% if user_signed_in? %>
  <%= link_to 'Создать новый пост', new_post_path %>
<% end %>
<table>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to 'Подробнее', post_path(post) %></td>
      <% if current_user.try(:admin?) %>
        <td><%= link_to 'Изменить', edit_post_path(post) %></td><br>
        <td><%= link_to 'Удалить', post_path(post),
                method: :delete,
                data: { confirm: 'Вы уверены?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<hr>
<% if user_signed_in? %>
  <span>Здравствуйте, <%= current_user.email %></span>
  <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
<% end %>