<%= render 'for_render/menu' %>
<p>
  <strong><center><%= @post.title %></center></strong>
</p>

<p>
  <center><%= @post.text %></center>
</p>

<h4>Комментарии:</h4>
<%= render @post.comments %>

<% if user_signed_in? %>
  <h3>Добавить комментарий:</h3>
  
  <%= render 'comments/form' %>
<% end %>

<% if current_user.try(:admin?) %>
  <%= link_to 'Изменить', edit_post_path(@post) %> 
<% end %>
<%= link_to '<button type="button">Вернуться</button>'.html_safe, posts_path %> <br>

<%= render 'for_render/sign' %>
