<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label "Ваше имя" %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label "Ваш комментарий" %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
